	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<spring.version>4.2.5.RELEASE</spring.version>
	</properties>
	<modules>
		<module>angel-sping-core</module>
		<module>angel-common</module>
		<module>angel-web</module>
		<module>angel-test</module>
		<module>angel-webloader</module>
	</modules>

	<dependencyManagement>
		<dependencies>

			<dependency>
				<groupId>com.tmall.wireless</groupId>
				<artifactId>angel-sping-core</artifactId>
